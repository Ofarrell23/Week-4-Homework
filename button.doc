<button id="previous" class="btn" onlick="PreviousQuestion()">Previous Question</button>
<button id="next" class="btn" onlick="NextQuestion">Next Question</button>
<button id="submit" class="btn" onclick="SubmitAnswers">Submit Answers</button>

.answer-body {
    height: 250px;
    width: 1010px;
    align-items: center;
  }
.slide{
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  z-index: 1;
  opacity: 0;
  transition: opacity 0.5s;
}
.active-slide{
  opacity: 1;
  z-index: 2;
}
.quiz-container{
  position: relative;
  height: 200px;
  margin-top: 40px;
}